{
  "devDependencies": {
    "@commitlint/config-conventional": "17.4.4",
    "@google/semantic-release-replace-plugin": "1.2.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/gitlab": "12.0.1",
    "commitlint": "17.5.1",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "semantic-release": "21.0.1"
  },
  "scripts": {
    "postinstall": "husky install",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branches": [
      "master",
      "feature/strm-1909"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "protos/buf.gen.yaml"
              ],
              "from": "module=github.com/strmprivacy/api-definitions-go/v.*",
              "to": "module=github.com/strmprivacy/api-definitions-go/v${nextRelease.version.split('.')[0]}",
              "countMatches": true
            },
            {
              "files": [
                "Makefile"
              ],
              "from": "strmprivacy_api_version := .*",
              "to": "strmprivacy_api_version := ${nextRelease.version}",
              "results": [
                {
                  "file": "Makefile",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}",
          "assets": [
            "Makefile",
            "CHANGELOG.md"
          ]
        }
      ],
      "@semantic-release/gitlab"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "version": "1.23.0"
}
